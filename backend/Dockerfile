    libpq-dev \
    libzip-dev \
    && docker-php-ext-install pdo pdo_mysql zip

# 4Ô∏è‚É£ Copy composer files tr∆∞·ªõc (ƒë·ªÉ t·∫≠n d·ª•ng cache)
