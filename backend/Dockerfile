# syntax=docker/dockerfile:1.4
FROM php:8.4-cli

# 1Ô∏è‚É£ Set working directory
WORKDIR /var/www/html

# 2Ô∏è‚É£ Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libpq-dev \
    libzip-dev \
    && docker-php-ext-install pdo pdo_mysql zip bcmath

# 3Ô∏è‚É£ Install Composer globally
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# 4Ô∏è‚É£ Copy to√†n b·ªô source code tr∆∞·ªõc ƒë·ªÉ artisan c√≥ s·∫µn
COPY . .

# 5Ô∏è‚É£ Cho ph√©p Composer ch·∫°y v·ªõi quy·ªÅn root (Render ch·∫°y b·∫±ng root)
ENV COMPOSER_ALLOW_SUPERUSER=1

# 6Ô∏è‚É£ Cache Composer dependencies
RUN --mount=type=cache,target=/root/.composer \
    composer install --no-dev --no-interaction --prefer-dist --optimize-autoloader

# 7Ô∏è‚É£ Set quy·ªÅn cho storage & cache
RUN chmod -R 775 storage bootstrap/cache

# 8Ô∏è‚É£ Thi·∫øt l·∫≠p bi·∫øn m√¥i tr∆∞·ªùng PORT (Render s·∫Ω override)
ENV PORT=8000

# 9Ô∏è‚É£ Expose port (ch·ªâ ƒë·ªÉ tham kh·∫£o, Render t·ª± map c·ªïng th·∫≠t)
EXPOSE 8000

# üîü Kh·ªüi ch·∫°y Laravel v·ªõi dynamic port c·ªßa Render
CMD php artisan serve --host=0.0.0.0 --port=${PORT}
